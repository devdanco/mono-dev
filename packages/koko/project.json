{
  "name": "@mononxtest/koko",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/koko/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/koko",
        "main": "packages/koko/src/index.ts",
        "tsConfig": "packages/koko/tsconfig.lib.json",
        "assets": ["packages/koko/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/koko/**/*.ts",
          "packages/koko/package.json"
        ]
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "branches": [
          "main",
          { "name": "rc/*", "channel": "rc", "prerelease": "rc" }
        ],
        "buildTarget": "@mononxtest/koko:build",
        "repositoryUrl": "https://github.com/devdanco/mono-dev",
        "outputPath": "dist/packages/koko",
        "github": true,
        "changelog": true,
        "npm": true,
        "tagFormat": "${PROJECT_NAME}-v${version}"
      }
    }
  },
  "tags": []
}

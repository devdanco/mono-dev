{
  "name": "foundation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/foundation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/foundation",
        "main": "packages/foundation/src/index.ts",
        "tsConfig": "packages/foundation/tsconfig.lib.json",
        "assets": ["packages/foundation/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/foundation/**/*.ts",
          "packages/foundation/package.json"
        ]
      }
    },
    "release": {
      "executor": "nx-release:build-update-publish",
      "options": {
        "libName": "foundation"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "push": true,
        "noVerify": true,
        "postTargets": [
          "semver:publish",
          "semver:github"
        ],
        "commitMessageFormat": "release(${projectName}): ðŸŽ¸ cut release to ${version}"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}

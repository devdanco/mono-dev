{
  "name": "foundation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/foundation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/foundation",
        "main": "packages/foundation/src/index.ts",
        "tsConfig": "packages/foundation/tsconfig.lib.json",
        "assets": ["packages/foundation/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/foundation/**/*.ts",
          "packages/foundation/package.json"
        ]
      }
    },
    "semantic-release": {
      "executor": "@goestav/nx-semantic-release:semantic-release"
    }
  },
  "tags": []
}
